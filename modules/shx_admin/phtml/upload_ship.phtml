<main>
    <div class="centrado" id="login">
        <form action="" method="post" id="form-upload-img" class="box" enctype='multipart/form-data'>
            <h3>Nueva nave de combate</h3>            
            <label for="name">Nombre:</label>
            <input type="text" name="name" id="name">
            <label for="descr">Descripcion:</label>
            <input type="text" name="descr" id="descr">
            <label for="price">Precio:</label>
            <input type="number" name="price" id="price">
            <label for="health">Vida:</label>
            <input type="number" name="health" id="health">
            <label for="level">Nivel:</label>
            <input type="number" name="level" id="level">
            <label for="type">Tipo:</label>
            <input type="number" name="type" id="type">
            <label for="imagen">Imagen:</label>
            <input type="file" accept=".gif,.jpg,.jpeg,.png" name="imagen" id="upload-input"/>
            <img alt="foto a subir" src="//:0" id="foto" height="200" width="200">
            <input type="submit" value="Registrate">
        </form>
    </div>
</main>
